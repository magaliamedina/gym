<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".view.Login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/sgas" />

    <EditText
        android:id="@+id/txt_emailLogin"
        android:layout_width="370dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:drawableStart="@drawable/vector_person"
        android:ems="10"
        android:hint="@string/txt_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txt_passLogin"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:autofillHints=""
        android:drawableStart="@drawable/vector_lock"
        android:ems="10"
        android:hint="@string/txt_password"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/cbRecordarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:text="Recordar usuario y contraseÃ±a" />

    <Button
        android:id="@+id/btn_iniciarsesion"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/btn_iniciar_sesion"
        android:textColor="#ffffff" />


</LinearLayout>
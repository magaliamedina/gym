<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetallesPersonal">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="Datos del personal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtidpersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtdnipersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DNI:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtapellidopersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtnombrespersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtsexopersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sexo:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtfechnacpersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de nacimiento:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtlocalidadpersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Localidad:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtprovinciapersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provincia:"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtestadopersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtestadocivilpersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado civil:"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtusuariopersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de usuario:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtemailpersonaldetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email:"
            android:textSize="18sp" />

    </LinearLayoutCompat>

</LinearLayout>
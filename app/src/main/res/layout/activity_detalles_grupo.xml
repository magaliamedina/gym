<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".DetallesGrupo">

    <TextView
        android:id="@+id/txtid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txthorariogrupodetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horario:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtprof1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profesor:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtprof2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profesor:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtcupototal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total de cupos:"
        android:textSize="18sp" />
</LinearLayout>